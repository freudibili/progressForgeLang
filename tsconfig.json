{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@user/*": ["src/user/*"],
      "@vocabularyCards/*": ["src/vocabularyCards/*"],
      "@mobile/*": ["src/mobile/*"],
      "@web/*": ["src/web/*"],
      "@levels/*": ["src/levels/*"],
      "@common/*": ["src/common/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
