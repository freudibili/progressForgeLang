{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@auth/*": [
        "src/auth/*"
      ],
      "@user/*": [
        "src/user/*"
      ],
      "@card/*": [
        "src/card/*"
      ],
      "@mobile/*": [
        "src/mobile/*"
      ],
      "@web/*": [
        "src/web/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
